programa {
  funcao inicio() {
    inteiro a, b ,c, media
    escreva("Digite o primeiro número: \n")
    leia(a)
    escreva("Digite o segundo número: \n")
    leia(b)
    escreva("Digite o teceiro número: \n")
    leia(c)

    media = (a + b + c) / 3

    escreva("A média dos 3 números é:\n", media)
  }
}
